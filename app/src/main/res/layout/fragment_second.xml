<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView

        android:id="@+id/txtNombreDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/ivPokemon"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView

        android:id="@+id/txtAlturaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/txtNombreDetalle"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreDetalle"


        />

    <TextView

        android:id="@+id/txtPesoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/txtAlturaDetalle"
        app:layout_constraintTop_toBottomOf="@+id/txtAlturaDetalle"

        />

</androidx.constraintlayout.widget.ConstraintLayout>